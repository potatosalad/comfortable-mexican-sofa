<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <title><%= Jangle.config.cms_title %></title>
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag :cms, :cache => ('_cms' if Jangle.config.enable_caching) %>
    <%= javascript_include_tag :cms, :cache => ('_cms' if Jangle.config.enable_caching) %>
    <%= javascript_include_tag :tiny_mce %>
    <%= yield :head %>
    <%= cms_hook :html_head %>
  </head>
  <body class='c_<%= params[:controller].idify %> a_<%= params[:action].idify %>'>
    <div class='body_wrapper'>
      <div class='left_column'>
        <div class='left_column_content'>
          <% unless Jangle.config.auto_manage_sites %>
            <%= active_link_to 'Sites', jangle_sites_path %>
          <% end %>
          <%= active_link_to 'Layouts', jangle_layouts_path %>
          <%= active_link_to 'Pages', jangle_pages_path %>
          <%= active_link_to 'Snippets', jangle_snippets_path %>
          <%= cms_hook :navigation %>
        </div>
      </div>
      <div class='right_column'>
        <div class='right_column_content'>
          <%= yield :right_column %>
        </div>
      </div>
      <div class='center_column'>
        <% flash.each do |type, message| %>
          <div class='flash <%= type %>'><%= message %></div>
        <% end %>
        <div class='center_column_content'>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>