<% content_for :right_column do %>
  <%= render :partial => 'jangle/uploads/index' %>
<% end %>

<%= form.text_field :label, :label => 'Layout Name', :id => (@jangle_layout.new_record?? 'slugify' : nil)%>
<%= form.text_field :slug, :id => 'slug' %>
<% if (options = Jangle::Layout.options_for_select(@jangle_site, @jangle_layout)).present? %>
  <%= form.select :parent_id, [['---- Select Parent Layout ----', nil]] + options %>
<% end %>
<% if (options = Jangle::Layout.app_layouts_for_select).present? %>
  <%= form.select :app_layout, [['---- Select Application Layout ----', nil]] + options %>
<% end %>

<%= form.text_area :content, :class => 'code' %>
<%= form.text_area :css, :class => 'code_css' %>
<%= form.text_area :js, :class => 'code_js' %>
